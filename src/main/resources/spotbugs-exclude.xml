<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Suppress EI_EXPOSE_REP for Spring beans -->
    <Match>
        <Class name="~.*Controller"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Suppress EI_EXPOSE_REP for JPA entities -->
    <Match>
        <Class name="~.*entity\..*"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Class name="~.*entity\..*"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Suppress for DTOs that need to be fixed manually -->
    <Match>
        <Class name="~.*dto\..*"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Class name="~.*dto\..*"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Suppress PA_PUBLIC_PRIMITIVE_ATTRIBUTE for DTOs -->
    <Match>
        <Class name="~.*dto\..*"/>
        <Bug pattern="PA_PUBLIC_PRIMITIVE_ATTRIBUTE"/>
    </Match>
</FindBugsFilter>